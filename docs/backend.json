{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile in the system.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "phoneNumber": {
          "type": "string",
          "description": "The user's phone number."
        }
      },
      "required": ["uid"]
    },
    "Product": {
      "title": "Product",
      "description": "Represents a product in the e-commerce store.",
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "The product's unique ID."
        },
        "name": {
          "type": "string",
          "description": "The name of the product."
        },
        "description": {
          "type": "string",
          "description": "A detailed description of the product."
        },
        "category": {
          "type": "string",
          "enum": [
            "Bags",
            "Umbrellas",
            "Apparel",
            "Accessories"
          ]
        },
        "material": {
          "type": "string"
        },
        "color": {
          "type": "string"
        },
        "price": {
          "type": "number",
          "description": "Price in USD."
        },
        "stock": {
          "type": "number",
          "description": "Number of items in stock."
        },
        "status": {
          "type": "string",
          "description": "The status of the product.",
          "enum": ["active", "draft"]
        },
        "imageUrls": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "imageHints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "sizes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "care": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "id",
        "name",
        "description",
        "category",
        "price",
        "stock",
        "status",
        "imageUrls"
      ]
    }
  },
  "auth": {
    "providers": [
      "phone",
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores user profile information."
    },
    "/products/{productId}": {
      "schema": {
        "$ref": "#/entities/Product"
      },
      "description": "Stores product details."
    }
  }
}
