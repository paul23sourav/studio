rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    //
    // ACCESS CONTROL FUNCTIONS
    //
    function isAuth() {
      return request.auth != null;
    }

    // The isDevAdmin function grants admin rights to specific developer accounts.
    function isDevAdmin() {
      return isAuth() && (request.auth.token.email == 'paulspshubham94@gmail.com' || request.auth.token.email == 'paul23sourav@gmail.com');
    }

    // The isAdmin function checks for either a custom 'admin' claim or if the user is a dev admin.
    function isAdmin() {
      return isAuth() && (request.auth.token.admin == true || isDevAdmin());
    }

    // These rules control access to the 'products' folder.
    match /products/{imageName} {
      // Allow anyone to read product images.
      // This is required for the public e-commerce storefront.
      allow read: if true;

      // Allow creating/uploading files only if the user is an admin.
      // This also enforces a 5MB file size limit and image-only content types.
      allow create: if isAdmin() &&
                       request.resource.size < 5 * 1024 * 1024 &&
                       request.resource.contentType.matches('image/.*');

      // Allow deleting files only if the user is an admin.
      allow delete: if isAdmin();

      // Disallow updating file metadata for security.
      allow update: if false;
    }
  }
}
