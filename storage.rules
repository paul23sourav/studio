rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Product images are publicly readable.
    // Only authenticated admins can write (create, update, delete) product images.
    match /products/{imageName} {
      allow read: if true;
      allow write: if request.auth != null && (
        request.auth.token.admin == true ||
        request.auth.token.email == 'paulspshubham94@gmail.com' ||
        request.auth.token.email == 'paul23sourav@gmail.com'
      );
    }
  }
}
