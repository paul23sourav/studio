rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // These rules control access to the 'products' folder.
    match /products/{imageName} {
      // Allow anyone to read product images.
      // This is required for the public e-commerce storefront.
      allow read: if true;

      // Allow creating/uploading files only if the user is an admin.
      // This rule inlines all checks to remove ambiguity from helper functions.
      allow create: if request.auth != null &&
                       (request.auth.token.admin == true ||
                        request.auth.token.email == 'paulspshubham94@gmail.com' ||
                        request.auth.token.email == 'paul23sourav@gmail.com') &&
                       request.resource.size < 5 * 1024 * 1024 && // 5MB limit
                       request.resource.contentType.matches('image/.*');

      // Allow deleting files only if the user is an admin.
      allow delete: if request.auth != null &&
                       (request.auth.token.admin == true ||
                        request.auth.token.email == 'paulspshubham94@gmail.com' ||
                        request.auth.token.email == 'paul23sourav@gmail.com');

      // Disallow updating file metadata for security.
      allow update: if false;
    }
  }
}
