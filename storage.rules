rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    function isDevAdmin() {
      return request.auth != null && (request.auth.token.email == 'paulspshubham94@gmail.com' || request.auth.token.email == 'paul23sourav@gmail.com');
    }
    
    function isAdmin() {
      return request.auth != null && (request.auth.token.admin == true || isDevAdmin());
    }

    // Allow public read access to all files.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Restrict write access to the 'products' folder to admins only.
    // TEMPORARILY changed for debugging to allow any authenticated user to write.
    match /products/{imageName} {
      allow write: if request.auth != null;
    }
  }
}
