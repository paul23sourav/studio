rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Allow public read access to all files.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Admins can create, update, and delete product images.
    // This rule is temporarily loosened for debugging.
    match /products/{imageName} {
      allow write: if request.auth != null;
    }
  }
}
